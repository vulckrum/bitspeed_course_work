<%- include("partials/head.ejs") %>
    <div class="space-3">
        <div class="container">
            <form action="/register" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3 mb-sm-6">
                        <!-- Input -->
                        <div class="js-form-message">
                            <label class="input-label">ПІБ</label>
                            <input type="text" class="form-control" name="name" placeholder="vitalik line" required="">
                        </div>
                        <!-- End Input -->
                    </div>

                    <div class="col-md-6 mb-3 mb-sm-6">
                        <!-- Input -->
                        <div class="js-form-message">
                            <label class="input-label">Телефон</label>
                            <input type="text" class="form-control" name="phone" placeholder="+380970000000" required="">
                        </div>
                        <!-- End Input -->
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-6 mb-3 mb-sm-6">
                        <!-- Input -->
                        <div class="js-form-message">
                            <label class="input-label">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="test@test.com" required="">
                        </div>
                        <!-- End Input -->
                    </div>

                    <div class="col-md-6 mb-3 mb-sm-6">
                        <!-- Input -->
                        <div class="js-form-message">
                            <label class="input-label">Логін</label>
                            <input type="text" class="form-control" name="login" placeholder="+380970000000" required="">
                        </div>
                        <!-- End Input -->
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-6 mb-3 mb-sm-6">
                        <!-- Input -->
                        <div class="js-form-message">
                            <label class="input-label">Пароль</label>
                            <input type="password" class="form-control" name="password" placeholder="*******" required="">
                        </div>
                        <!-- End Input -->
                    </div>

                    <div class="col-md-6 mb-3 mb-sm-6">
                        <!-- Input -->
                        <label class="input-label">Послуга</label>
                        <select class="form-control" name="servise">
                            <% for(var i=0;i!=servises.length;i++){ %>
                                <option value="<%= servises[i]._id %>"><%= servises[i].name %></option>
                            <% } %> 
                        </select>
                        <!-- End Input -->
                    </div>

                    <div class="col-md-6 mb-3 mb-sm-6">
                        <label class="text-white">.</label>
                        <button type="submit" class="btn btn-primary w-100">Зареєструватися</button>
                    </div>

                    <div class="w-100"></div>
                </div>
            </form>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>